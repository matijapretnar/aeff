operation question : [|unit -> int|]
operation answer : int

let getAnswer f =
  let result = promise (answer x -> <<x>>) in
  send question f;
  result

run
  let r = getAnswer ([|fun () -> 3 + 3|]) in
  let y = 1 + 1 in
  let z = y + y in
  let w = y + z in
  let u = (w + 1) * (awaitValue r) in
  u

run
  promise (question f ->
    unbox f as [|f'|] in
    let y = f' () in
    send answer y;
    return <<()>>
  )
